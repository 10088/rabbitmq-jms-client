#!/bin/bash

echo Reset RabbitMQ server for Integration Tests

if [ -z "${RABBITMQ_BASE}" ] ; then
  echo "Couldn't find the RABBITMQ_BASE directory"
  exit 1
fi

sudo ${RABBITMQ_BASE}/rabbitmqctl stop_app
sudo ${RABBITMQ_BASE}/rabbitmqctl reset
# sudo rabbitmq-plugins enable rabbitmq_rjms_topics
sudo ${RABBITMQ_BASE}/rabbitmq-plugins list
sudo ${RABBITMQ_BASE}/rabbitmqctl start_app

echo RabbitMQ server reset
